{
  "name": "little-kb",
  "version": "1.0.0",
  "description": "Little KB - Vector Storage & MCP Management Platform",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently --kill-others \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && PORT=39473 npm start",
    "dev:electron": "sleep 5 && electron . --dev",
    "dev:backend": "cd backend && uv run python main.py",
    "build": "npm run build:frontend && npm run build:backend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "pyinstaller backend.spec",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.littlekb.app",
    "productName": "Little KB",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "resources/icon.png"
    },
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "author": "Little KB Team",
  "license": "MIT"
}
